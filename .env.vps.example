# =============================================================================
# VPS DEPLOYMENT ENVIRONMENT VARIABLES - TEMPLATE
# =============================================================================
# This file is used with docker-compose.vps.yml for VPS deployments
# Copy this file to .env.vps and fill in the values
# DO NOT commit .env.vps file to git (it's in .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# POSTGRESQL DATABASE (SHARED)
# -----------------------------------------------------------------------------
# PostgreSQL superuser credentials
POSTGRES_USER=reiche
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Note: Databases are created automatically:
# - reiche_academy_prod (production)
# - reiche_academy_staging (staging)

# -----------------------------------------------------------------------------
# REDIS (SHARED)
# -----------------------------------------------------------------------------
# Redis password for authentication
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# -----------------------------------------------------------------------------
# JWT SECRETS - PRODUCTION
# -----------------------------------------------------------------------------
# IMPORTANT: Use different secrets for production and staging!
# Generate strong secrets with: openssl rand -base64 32

# Production JWT access token secret
JWT_SECRET_PROD=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Production JWT refresh token secret
JWT_REFRESH_SECRET_PROD=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Production JWT token expiration times
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# -----------------------------------------------------------------------------
# JWT SECRETS - STAGING
# -----------------------------------------------------------------------------
# Staging JWT access token secret
JWT_SECRET_STAGING=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Staging JWT refresh token secret
JWT_REFRESH_SECRET_STAGING=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# -----------------------------------------------------------------------------
# CORS ORIGINS
# -----------------------------------------------------------------------------
# Production frontend URL (use your actual domain)
CORS_ORIGIN_PROD=https://reiche.seudominio.com.br

# Staging frontend URL (use your actual subdomain)
CORS_ORIGIN_STAGING=https://staging.reiche.seudominio.com.br

# -----------------------------------------------------------------------------
# TIMEZONE
# -----------------------------------------------------------------------------
TZ=America/Sao_Paulo

# -----------------------------------------------------------------------------
# OPTIONAL CONFIGURATION
# -----------------------------------------------------------------------------
# Rate limiting settings (can be adjusted based on needs)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Business rules
AUTO_ASSOCIAR_PILARES_PADRAO=true
