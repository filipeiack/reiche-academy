# Environment Variables - VPS ÚNICO (Staging + Produção)
# Arquivo usado no servidor VPS

# =============================================================
# DATABASE (compartilhado entre staging e produção)
# =============================================================
POSTGRES_USER=reiche_admin
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#

# =============================================================
# REDIS (compartilhado)
# =============================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!@#

# =============================================================
# JWT SECRETS - PRODUÇÃO
# =============================================================
# GERAR NOVOS! Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET_PROD=GENERATE_PRODUCTION_JWT_SECRET_HERE_128_CHARS
JWT_REFRESH_SECRET_PROD=GENERATE_PRODUCTION_REFRESH_SECRET_HERE_128_CHARS

# =============================================================
# JWT SECRETS - STAGING
# =============================================================
JWT_SECRET_STAGING=GENERATE_STAGING_JWT_SECRET_HERE_128_CHARS
JWT_REFRESH_SECRET_STAGING=GENERATE_STAGING_REFRESH_SECRET_HERE_128_CHARS

# =============================================================
# APPLICATION - PRODUÇÃO
# =============================================================
CORS_ORIGIN_PROD=https://app.reicheacademy.com.br

# =============================================================
# APPLICATION - STAGING
# =============================================================
CORS_ORIGIN_STAGING=https://staging.reicheacademy.com.br

# =============================================================
# GENERAL
# =============================================================
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
