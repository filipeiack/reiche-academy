# =============================================================================
# BACKEND ENVIRONMENT VARIABLES - TEMPLATE
# =============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env file to git (it's in .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONNECTION
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://reiche:reiche_dev_2024@localhost:5432/reiche_academy?schema=public

# -----------------------------------------------------------------------------
# REDIS CACHE
# -----------------------------------------------------------------------------
# Redis connection string
# Format: redis://[:PASSWORD@]HOST:PORT[/DATABASE]
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------
# Secret key for JWT access tokens (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Access token expiration time (examples: 15m, 1h, 2h, 1d)
JWT_ACCESS_EXPIRATION=2h

# Secret key for JWT refresh tokens (CHANGE IN PRODUCTION!)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Refresh token expiration time (examples: 1d, 7d, 30d)
JWT_REFRESH_EXPIRATION=1d

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# Node environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=3000

# Server host (0.0.0.0 for Docker, localhost for local dev)
HOST=0.0.0.0

# API route prefix
API_PREFIX=api

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Allowed CORS origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:4200

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
# Time to live for rate limiting (in seconds)
THROTTLE_TTL=60

# Maximum number of requests per TTL
THROTTLE_LIMIT=10

# -----------------------------------------------------------------------------
# TIMEZONE
# -----------------------------------------------------------------------------
# Application timezone
TZ=America/Sao_Paulo

# -----------------------------------------------------------------------------
# BUSINESS RULES (OPTIONAL)
# -----------------------------------------------------------------------------
# Auto-associate default pillars when creating company (true/false)
AUTO_ASSOCIAR_PILARES_PADRAO=true
